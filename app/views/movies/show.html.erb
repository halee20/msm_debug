<div class="page-header">
  <h1>Movie #<%= @movie_id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= @movie_title %></dd>

  <dt>Year</dt>
  <dd><%= @movie_year %></dd>

  <dt>Duration</dt>
  <dd><%= @movie_duration %></dd>

  <dt>Description</dt>
  <dd><%= @movie_description %></dd>

  <dt>Director ID</dt>
  <dd><%= @movie_director_id %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @movie_image_url %>" width="320"></dd>


</dl>
